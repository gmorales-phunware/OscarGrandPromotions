
<% if !flash[:notice].blank? %>
   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>

<h1>Listing promotions</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Title Arabic</th>
      <th>Price</th>
      <th>Price Arabic</th>
      <th>Imageurl</th>
      <th>Weekend Promotion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promotions.each do |promotion| %>
      <tr>
        <td><%= promotion.title %></td>
        <td><%= promotion.title_arabic %></td>
        <td><%= promotion.price %></td>
        <td><%= promotion.price_arabic%></td>
        <td><%= promotion.imageURL %></td>
        <td><%= promotion.weekendPromotion %></td>
        <td><%= link_to 'Show', promotion, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_promotion_path(promotion), class: "btn btn-default" %></td>
        <td><%= button_to 'Delete', promotion, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{promotion.title}?" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Promotion', new_promotion_path, class: "btn btn-primary" %>
